<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/editText_Iwant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_iwant"
        android:layout_toLeftOf="@+id/button_SubmitIwant"
        android:ems="10"
        android:hint="Enter Your Preferences" />

    <Button
        android:id="@+id/button_SubmitIwant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_Iwant"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/editText_Iwant"
        android:background="#C0C0C0"
        android:text="  Submit   " />

    <ListView
        android:id="@+id/listView_iwantResult2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText_Iwant" >

    </ListView>

    <TextView
        android:id="@+id/textView_iwant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="I want"
        android:textSize="33dp" />

</RelativeLayout>